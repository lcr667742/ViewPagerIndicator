<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CirclePagerIndicator">
        <attr name="circle_centerHorizontal" format="boolean"/>
        <attr name="circle_following" format="boolean"/>
        <attr name="circle_orientation" format="reference"/>
        <attr name="circle_color" format="color"/>
        <attr name="circle_fill_color" format="color"/>
        <attr name="circle_stroke_color" format="color"/>
        <attr name="circle_stroke_width" format="dimension"/>
        <attr name="circle_radius" format="dimension"/>
        <attr name="circle_space" format="dimension"/>
        <attr name="circle_current_radius" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="LinePagerIndicator">
        <attr name="line_centerHorizontal" format="boolean"/>
        <attr name="line_following" format="boolean"/>
        <attr name="line_width" format="dimension"/>
        <attr name="line_height" format="dimension"/>
        <attr name="line_space" format="dimension"/>
        <attr name="line_fill_color" format="color"/>
        <attr name="line_current_color" format="color"/>
        <attr name="line_current_height" format="dimension"/>
    </declare-styleable>
</resources>